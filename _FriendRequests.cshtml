@model IEnumerable<ViewModels.RelationshipViewModel>
@if (Model.Count() != 0)
{
<li id="friend-request-icon" class="dropdown">
    <a class="dropdown-toggle">
        <i class="fa fa-user-plus fa-2x"></i>
    </a>
        <div id="friend-request-notification">@Model.Count()</div>


@if (Model.Count() != 0)
{
    <ul id="friend-request-list" class="dropdown-menu nav-list">
        <li><h5>Friend Requests</h5></li>
            @foreach (var item in Model)
            {
            <li class="friend-request-item" relID="@item.RelationshipID">
                <img src="../Images/@item.ProfilePicture" onclick="ViewProfile('@item.UserID')" />
                <a onclick="ViewProfile('@item.UserID')">@item.FirstName @item.LastName</a>
                <div class="friend-btn-container">
                    <a class="friend-request-btn" onclick="ConfirmFriend(this)">Confirm</a>
                    <a class="friend-request-btn" onclick="DenyFriend(this)">Deny</a>
                </div>

            </li>
            }
        
    </ul>
}
</li>
    
}